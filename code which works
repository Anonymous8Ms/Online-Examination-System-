        .analysis-fill { height: 100%; background: var(--success); width: 0%; transition: width 1s ease; }

        /* Animations */
        @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }
        
