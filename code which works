    <div id="exam-interface" class="hidden">
        <div class="exam-header">
            <div>JavaScript Final Assessment</div>
            <div class="timer-box" id="timer">10:00</div>
        </div>
        <div class="exam-body">
            <form id="exam-form">
                <div id="questions-container"></div>
            </form>
        </div>
        <div style="padding: 20px; border-top: 1px solid #eee; text-align: right; background: #f9f9f9;">
            <button class="btn btn-danger" onclick="submitExam()">Finish & Submit</button>
        </div>
    </div>

    <div id="thank-you-msg" class="hidden" style="position: fixed; top:0; left:0; width:100%; height:100%; background:rgba(0,0,0,0.9); z-index:2000; color:white; display:flex; align-items:center; justify-content:center; flex-direction:column; text-align:center;">
        <h1 style="font-size: 3rem; margin-bottom: 20px;">Thank You!</h1>
        <p style="font-size: 1.2rem; max-width: 600px;">Your exam has been submitted successfully.</p>
        <p id="submission-reason" style="color: #ccc; margin-top: 10px;"></p>
        <button class="btn btn-primary" style="margin-top: 30px;" onclick="closeExamSession()">View Results</button>
    </div>

    <script>
        // --- DATA & STATE ---
        const questions = [
            { id: 1, q: "Which HTML tag is used to define an internal style sheet?", options: ["<script>", "<css>", "<style>", "<link>"], ans: 2 },
            { id: 2, q: "Which is the correct CSS syntax?", options: ["body:color=black;", "body {color: black;}", "{body;color:black;}", "body:color black;"], ans: 1 },
            { id: 3, q: "How do you write 'Hello World' in an alert box in JavaScript?", options: ["msg('Hello World');", "msgBox('Hello World');", "alertBox('Hello World');", "alert('Hello World');"], ans: 3 },
            { id: 4, q: "Which event occurs when the user clicks on an HTML element?", options: ["onmouseover", "onclick", "onchange", "onmouseclick"], ans: 1 },
            { id: 5, q: "How do you declare a JavaScript variable?", options: ["v carName;", "variable carName;", "var carName;", "string carName;"], ans: 2 }
        ];

        let currentUser = {};
        let examTimer;
        let timeLeft = 600; // 10 minutes in seconds
        let tabSwitches = 0;
        const MAX_SWITCHES = 3;
        let isExamActive = false;

        // --- NAVIGATION & LOGIN ---
        function handleLogin() {
            const name = document.getElementById('username').value;
            if(!name) return alert("Please enter your name");
            
            currentUser = { name: name };
            document.getElementById('display-name').innerText = name;
            document.getElementById('welcome-name').innerText = name;
            document.getElementById('avatar-initial').innerText = name.charAt(0).toUpperCase();

            document.getElementById('login-view').classList.add('hidden');
            document.getElementById('dashboard-view').classList.remove('hidden');
        }

        function switchTab(tabName) {
            // Hide all tabs
            document.querySelectorAll('.content-tab').forEach(t => t.classList.add('hidden'));
            document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
            
            // Show selected
            document.getElementById(`tab-${tabName}`).classList.remove('hidden');
            
            // Update sidebar active state (simple matching)
            const index = ['instructions', 'exams', 'results'].indexOf(tabName);
            document.querySelectorAll('.nav-item')[index].classList.add('active');
        }

        // --- EXAM LOGIC ---
        async function initiateExam() {
            // 1. Permission Check (Mocking Camera/Mic request)
            try {
                alert("Requesting Camera & Microphone Access for Proctoring...");
                await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
            } catch (err) {
                alert("Note: Permissions denied or not supported in this demo environment. Proceeding anyway.");
            }

            // 2. Setup Interface
            document.getElementById('dashboard-view').classList.add('hidden');
            document.getElementById('exam-interface').classList.remove('hidden');
            
            renderQuestions();
            startTimer();
            isExamActive = true;
            tabSwitches = 0;
            
            // 3. Enable Fullscreen (Optional browser support)
            document.documentElement.requestFullscreen().catch((e)=>{});
        }

        function renderQuestions() {
            const container = document.getElementById('questions-container');
            container.innerHTML = questions.map((q, index) => `
                <div class="question-card">
                    <h4>Q${index+1}. ${q.q}</h4>
                    <div class="options-grid">
                        ${q.options.map((opt, i) => `
                            <label class="option-label">
                                <input type="radio" name="q${q.id}" value="${i}">
                                <span>${opt}</span>
                            </label>
                        `).join('')}
                    </div>
                </div>
            `).join('');
        }

        function startTimer() {
            const timerDisplay = document.getElementById('timer');
            timeLeft = 600; // Reset to 10 mins

            examTimer = setInterval(() => {
                timeLeft--;
                
                // Formatting time
                let m = Math.floor(timeLeft / 60);
                let s = timeLeft % 60;
                timerDisplay.innerText = `${m}:${s < 10 ? '0' : ''}${s}`;

                // 5 Minute Warning
                if (timeLeft === 300) {
                    alert("âš ï¸ NOTE: 5 Minutes Remaining!");
                    timerDisplay.classList.add('timer-warning');
                }

                if (timeLeft <= 0) {
                    submitExam("Time Up");
                }
            }, 1000);
        }

        // --- SECURITY: TAB SWITCH DETECTION ---
        document.addEventListener("visibilitychange", () => {
            if (!isExamActive) return;

            if (document.hidden) {
                tabSwitches++;
                if (tabSwitches >= MAX_SWITCHES) {
                    submitExam("Terminated due to suspicious activity (Tab Switching).");
                } else {
                    alert(`âš ï¸ WARNING: Do not switch tabs! attempt ${tabSwitches}/${MAX_SWITCHES}`);
                }
            }
        });

        // --- SUBMISSION & RESULTS ---
        function submitExam(reason = "Submission Successful") {
            clearInterval(examTimer);
            isExamActive = false;
            
            // Exit Fullscreen
            if (document.exitFullscreen) document.exitFullscreen();

            // Calculate Score
            let score = 0;
            let attempted = 0;
            let correct = 0;
            let wrong = 0;

            questions.forEach(q => {
                const selected = document.querySelector(`input[name="q${q.id}"]:checked`);
                if (selected) {
                    attempted++;
                    if (parseInt(selected.value) === q.ans) {
                        score++;
                        correct++;
                    } else {
                        wrong++;
                    }
                }
            });

            // Store Results (In Memory)
            const finalScore = Math.round((score / questions.length) * 100);
            
            // Show Thank You
            document.getElementById('exam-interface').classList.add('hidden');
            document.getElementById('thank-you-msg').classList.remove('hidden');
            document.getElementById('submission-reason').innerText = reason;

            // Prepare Result Data for display
            window.lastResult = {
                score: finalScore,
                attempted: attempted,
                total: questions.length,
                correct: correct,
                wrong: wrong,
                switches: tabSwitches
            };
        }

        function closeExamSession() {
            document.getElementById('thank-you-msg').classList.add('hidden');
            document.getElementById('dashboard-view').classList.remove('hidden');
            switchTab('results');
            displayResults();
        }

        function displayResults() {
            const res = window.lastResult;
            if (!res) return;

            document.getElementById('no-results').classList.add('hidden');
            document.getElementById('result-content').classList.remove('hidden');

            // Animate Numbers
            document.getElementById('score-display').innerText = res.score;
            document.getElementById('attempts-display').innerText = `${res.attempted}/${res.total}`;
            document.getElementById('switches-display').innerText = res.switches;
            
            document.getElementById('correct-count').innerText = res.correct;
            document.getElementById('wrong-count').innerText = res.wrong;

            // Visual Bars
            document.getElementById('bar-correct').style.width = `${(res.correct/res.total)*100}%`;
            document.getElementById('bar-wrong').style.width = `${(res.wrong/res.total)*100}%`;
        }
    </script>
</body>
</html>
